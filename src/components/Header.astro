---

<nav>
    <div class="logo">
        <a href="/">
            <img src="/logo.png" alt="8 bit heart" width="100">
        </a>
    </div>

    <button class="btn">
        <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#000" class="bi bi-justify" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M2 12.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z"/>
          </svg>
    </button>

    <ul class="menu">
        <button class="close-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="#000" class="bi bi-x-lg" viewBox="0 0 16 16">
                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
              </svg>
        </button>
        <li>
            <a href="/" class={Astro.url.pathname === '/' ? 'activo' : ''}>Inicio</a>
        </li>
        <li>
            <a href="/servicios" class={Astro.url.pathname === '/servicios' ? 'activo' : ''}>Nuestros servicios</a>
        </li>
        <li>
            <a href="/sobre-nosotros" class={Astro.url.pathname === '/sobre-nosotros' ? 'activo' : ''}>Sobre nosotros</a>
        </li>
        <li>
            <a href="/contacto" class={Astro.url.pathname === '/contacto' ? 'activo' : ''}>Contacto</a>
        </li>
        <li>
            <a href="/registro" class={Astro.url.pathname === '/registro' ? 'activo' : ''}>Registrate</a>
        </li>
    </ul>
</nav>

<script>
    const btn = document.querySelector('.btn');
    const menu = document.querySelector('.menu');
    const closeBtn = document.querySelector('.close-btn');

    btn.addEventListener('click', () => {
        menu.classList.toggle('active');
    });

    closeBtn.addEventListener('click', () => {
        menu.classList.remove('active');
    });
</script>

<style>

nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 3rem;
    background-color: #fff;
}

nav .logo {
    display: flex;
    align-items: center;
}

nav .btn {
    display: none;
    background-color: transparent;
    border: none;
    outline: none;
}

nav .close-btn {
    display: none;
    background-color: transparent;
    border: none;
    outline: none;
}

nav .menu {
    display: flex;
    list-style: none;
}

nav .menu li {
    margin: 0 1rem;
}

nav .menu li a {
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    padding: 1rem;
    border-radius: 5px;
    transition: all 0.3s ease;
}

nav .menu li a:hover, .activo {
    color: #fff;
    background-color: #22c55e;
}

@media (max-width: 768px) {
    nav {
        padding: 1rem;
    }

    nav .btn {
        display: block;
    }

    nav .close-btn {
        display: block;
        position: absolute;
        top: 1rem;
        right: 1rem;
    }

    nav .menu {
        position: fixed;
        top: 0;
        right: -150%;
        width: 100%;
        height: 100vh;
        background-color: #fff;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease;
    }

    nav .menu li {
        margin: 2rem 0;
    }

    nav .menu.active {
        right: 0;
    }
}

</style>