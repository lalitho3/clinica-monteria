---
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout titulo="Clínica | Registro">
    <div class="contenedor">
        <img src="/heroe.svg" alt="Imagen Heroe">
        <div class="formulario">
            <h1>Registrate y obtén tu cupón</h1>
            <form action="/registro" method="POST">
                <div class="campo">
                    <label for="nombre">Nombre</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Tu Nombre">
                </div>
                <div class="campo">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="Tu Email">
                </div>
                <div class="campo">
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="Tu Password">
                </div>
                <input type="submit" value="Crear Cuenta">
            </form>
        </div>
    </div>
</MainLayout>

<style>

.contenedor {
    display: flex;
    justify-content: center;
    align-items: center;
}

.contenedor img {
    max-width: 40%;
    margin-top: 5rem;
}

.formulario {
    margin: 0 auto;
    border-radius: 0.5rem;
}

.formulario h1 {
    text-align: center;
    margin-bottom: 2rem;
    color: #22c55e;
}

.formulario .campo {
    margin-bottom: 2rem;
}

.formulario .campo label {
    display: block;
    font-size: 1.5rem;
    margin-bottom: 1rem;
}

.formulario .campo input {
    display: block;
    width: 90%;
    padding: 1rem;
    border: 1px solid #e1e1e1;
    border-radius: 0.5rem;

}

.formulario .campo input:focus {
    outline: none;
    border-color: #000;
}

.formulario .campo input:invalid {
    border-color: red;
}

.formulario .campo input:valid {
    border-color: green;
}

.formulario input[type="submit"] {
    width: 100%;
    padding: 1rem;
    background-color: #22c55e;
    color: #fff;
    font-size: 1rem;
    text-transform: uppercase;
    font-weight: bold;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

@media (max-width: 768px) {
    .contenedor {
        margin: 1rem;
    }

    .contenedor img {
        display: none;
    }
}

</style>